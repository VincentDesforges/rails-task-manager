<h1><%= @task.title %></h1>

<%= link_to "Edit this task", task_update_path(params[:id]) %>

<div class="task-description">
  <p><%= @task.details %></p>
</div>

<div class="test-status">
  <% if @task.completed %>
    <p>&#9745; This task is completed</p>
  <% else %>
    <p>&#9744; This task is not completed yet</p>
  <% end %>
</div>

<%= link_to "Back to list", tasks_path %>




